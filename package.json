{
	"name": "switch-spec",
	"displayName": "Switch Spec",
	"description": "Quick switch between source code and spec files.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.66.2"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:switch-spec.switchSpec",
		"onCommand:switch-spec.copySpecPath",
		"onCommand:switch-spec.toggleFixedSpec"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "switch-spec.switchSpec",
				"title": "Switch Spec"
			},
			{
				"command": "switch-spec.copySpecPath",
				"title": "Copy Spec Path"
			},
			{
				"command": "switch-spec.toggleFixedSpec",
				"title": "Toggle Fixed Spec"
			}

		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@types/vscode": "^1.66.2",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4"
	}
}
