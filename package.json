{
	"name": "spec-utils",
	"displayName": "Spec Utils",
	"description": "Utilities to help with spec files.",
	"version": "1.2.2",
	"publisher": "DouglasRocha",
	"author": "Douglas Rocha",
	"repository": {
		"type": "git",
		"url": "https://github.com/DouglasRochaT/spec-utils"
	},
	"icon": "images/icon.png",
	"license": "GPL-3.0",
	"engines": {
		"vscode": "^1.84.0"
	},
	"categories": [
		"Testing"
	],
	"keywords": [
		"test",
		"spec",
		"rspec",
		"jest",
		"cypress"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "spec-utils.switchSpec",
				"title": "Switch Between Spec File"
			},
			{
				"command": "spec-utils.copySpecPath",
				"title": "Copy Relative Spec Path"
			},
			{
				"command": "spec-utils.toggleFixedSpec",
				"title": "Toggle Fixed Test Block"
			}
		],
		"keybindings": [
			{
				"command": "spec-utils.switchSpec",
				"key": "ctrl+shift+t",
				"mac": "cmd+shift+t",
				"when": "editorTextFocus"
			},
			{
				"command": "spec-utils.copySpecPath",
				"key": "ctrl+shift+y",
				"mac": "cmd+shift+y",
				"when": "editorTextFocus"
			},
			{
				"command": "spec-utils.toggleFixedSpec",
				"key": "ctrl+;",
				"mac": "cmd+;",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "node esbuild.config.js",
		"package": "node esbuild.config.js --mode production --sourcemap",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@types/vscode": "^1.84.0",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"@typescript-eslint/parser": "^6.13.1",
		"@vscode/test-cli": "^0.0.4",
		"@vscode/test-electron": "^2.3.8",
		"esbuild": "^0.23.0",
		"eslint": "^8.54.0",
		"typescript": "^5.3.2"
	}
}
